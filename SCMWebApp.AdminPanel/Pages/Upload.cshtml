@page 
@model SCMWebApp.AdminPanel.Pages.UploadModel
@{
    ViewData["Title"] = "Upload";
}
<style>
    .form-container {
        width: 300px;
        height: 600px;
        background-color: #E7E7E7;
        padding-left: 20px;
        padding-top: 20px;
        padding-right: 20px;
        padding-bottom: 20px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        border-bottom-right-radius: 20px;
        border-bottom-left-radius: 20px;
    }

    .image-container {
        width: 260px;
        height: 200px;
        background-color: white;
        padding-left: 20px;
        padding-top: 20px;
        padding-right: 20px;
        padding-bottom: 20px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        border-bottom-right-radius: 20px;
        border-bottom-left-radius: 20px;
    }
</style>

<div>
    <h1>@ViewData["Title"]</h1>

    <form name="upload-form" method="post" enctype="multipart/form-data" class="form-container">
        Select an image to upload:
        <br />
        <input type="file" accept="image/*" asp-for="ImageType.ImagePath" name="Image" class="form-control"/>
        Title:
        <input type="text" asp-for="ImageType.Title" name="Title" class="form-control"/>
        Description:
        <input type="text" asp-for="ImageType.Description" name="Description" class="form-control" />
        ImageType:
        <select asp-for="ImageType.BannerTypeId" class="form-control" name="BannerTypeId">
            <option value="1">Introduction Page</option>
            <option value="2">Course Banner</option>
        </select>
        <br />
        <input type="submit" value="Upload"/>
    </form>

    @*<script src="~/js/site.js"></script>*@
</div>
