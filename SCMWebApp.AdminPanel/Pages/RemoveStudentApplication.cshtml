@page
@model SCMWebApp.AdminPanel.Pages.RemoveStudentApplicationModel
@{
    ViewData["Title"] = "Remove";
}

<style>
    .form-container {
        width: 300px;
        height: 600px;
        background-color: #E7E7E7;
        padding-left: 20px;
        padding-top: 20px;
        padding-right: 20px;
        padding-bottom: 20px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        border-bottom-right-radius: 20px;
        border-bottom-left-radius: 20px;
    }

    .image-container {
        width: 260px;
        height: 200px;
        background-color: white;
        padding-left: 20px;
        padding-top: 20px;
        padding-right: 20px;
        padding-bottom: 20px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        border-bottom-right-radius: 20px;
        border-bottom-left-radius: 20px;
    }
</style>

<div>
    <h1>@ViewData["Title"]</h1>

    <form name="upload-form" method="post" enctype="multipart/form-data" class="form-container">
        Name:
        <input type="text" asp-for="NewStudentApplication.Name" name="Title" class="form-control" readonly>
        Phone No.:
        <input type="text" asp-for="NewStudentApplication.PhoneNumber" name="Description" class="form-control" readonly>
        Email:
        <input type="text" asp-for="NewStudentApplication.Email" name="Description" class="form-control" readonly>
        Programme:
        <select asp-for="NewStudentApplication.ProgrammeId" class="form-control" name="ProgrammeId" disabled>
            <option value="1">Bachelor of Mobile Game Development</option>
            <option value="2">Bachelor of Computer Science</option>
            <option value="3">Bachelor of Arts in Industrial Design</option>
            <option value="4">Bachelor of Arts in Creative Digital Media</option>
            <option value="5">School of Computing and Creative Media</option>
            <option value="6">School of Postgraduate Studies</option>
        </select>
        <br />
        <input type="submit" value="Remove" />
    </form>
</div>